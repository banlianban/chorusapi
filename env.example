# Chorus API Environment Configuration

# Server Settings
HOST=0.0.0.0
PORT=8000
DEBUG=false

# File Settings
UPLOAD_DIR=uploads
OUTPUT_DIR=outputs
TEMP_DIR=temp
MAX_FILE_SIZE=52428800  # 50MB in bytes
FILE_RETENTION_HOURS=24

# Audio Processing Settings
MIN_DURATION=10
MAX_DURATION=120
DEFAULT_DURATION=30

# CORS Settings
CORS_ORIGINS=*
CORS_ALLOW_CREDENTIALS=true

# Logging
LOG_LEVEL=INFO

# Security
SECRET_KEY=your-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

